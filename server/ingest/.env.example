# Server
PORT=8080

# Postgres connection string (Azure Postgres Flexible Server compatible)
DATABASE_URL=postgresql://user:pass@host:5432/dbname?sslmode=require

# Auth (MVP)
# You can use a single shared key first, then upgrade to per-tenant mapping later.
INGEST_API_KEY=REPLACE_ME

# Signing policy (MVP)
SIGNING_REQUIRED=true

# HMAC secrets by key_id (example)
# Key id "msp-demo-01" -> env var name SIGNING_HMAC_KEY_MSP_DEMO_01
SIGNING_HMAC_KEY_MSP_DEMO_01=REPLACE_ME_LONG_RANDOM_SECRET_32PLUS
