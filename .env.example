# ─────────────────────────────────────────────
#  HIPAA SaaS Platform — Environment Config
#  Copy to .env and fill in values
# ─────────────────────────────────────────────

# Flask
FLASK_ENV=production
SECRET_KEY=change-me-to-a-long-random-string-at-least-32-chars

# PostgreSQL
DB_HOST=db
DB_PORT=5432
DB_NAME=hipaa_platform
DB_USER=hipaa_user
DB_PASSWORD=change-this-strong-password

# First admin account (created on first run)
ADMIN_EMAIL=admin@summitrange.com
ADMIN_PASSWORD=change-this-on-first-login
ADMIN_NAME=Summit Range Admin

# Azure Storage (optional — for file uploads)
# AZURE_STORAGE_CONNECTION_STRING=
# AZURE_STORAGE_CONTAINER=hipaa-evidence

# App settings
MAX_UPLOAD_MB=20
SESSION_HOURS=8

# Next Layer — AI (optional)
# ANTHROPIC_API_KEY=your-anthropic-key
# CLAUDE_ANALYST_ENABLED=false
# OPENAI_API_KEY=your-openai-key
# CHATGPT_CONCIERGE_ENABLED=false
